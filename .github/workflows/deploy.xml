name: Django CI/CD

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.9'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Run Tests
      run: |
        python manage.py test

    - name: Deploy to WSL
      if: github.ref == 'refs/heads/main'
      run: |
        scp -r ./* user@windowsserver:/mnt/c/path/to/project
        ssh user@windowsserver "cd /mnt/c/path/to/project && ./deploy.sh"
